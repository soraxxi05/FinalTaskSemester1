<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="70dp"
        android:paddingBottom="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LL1"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/LL1"
            android:orientation="vertical"
            android:layout_marginRight="60dp">

            <ImageView
                android:id="@+id/imgCourse"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/linearlayout1"
                android:src="@drawable/course" />

            <TextView
                android:id="@+id/txtCoourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Course"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgListening"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/linearlayout1"
                android:src="@drawable/listening" />

            <TextView
                android:id="@+id/txtListening"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Listening"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LL2"
        android:layout_below="@id/LL1"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/LL1"
            android:orientation="vertical"
            android:layout_marginRight="60dp">

            <ImageView
                android:id="@+id/imgPronounce"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/linearlayout1"
                android:src="@drawable/pronounce" />

            <TextView
                android:id="@+id/txtPronounce"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Pronounce"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgConverse"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/linearlayout1"
                android:src="@drawable/convers" />

            <TextView
                android:id="@+id/txtCoourse"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Conversation"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/LL3"
        android:layout_below="@id/LL2"
        android:layout_marginTop="60dp"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linearlayout5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/LL1"
            android:orientation="vertical"
            android:layout_marginRight="60dp">

            <ImageView
                android:id="@+id/imgVoocabs"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/linearlayout1"
                android:src="@drawable/vocabs" />

            <TextView
                android:id="@+id/txtVocabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Vocabs"
                android:textSize="17dp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linearlayout6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgExerse"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:layout_alignStart="@+id/linearlayout1"
                android:src="@drawable/newestexers"/>

            <TextView
                android:id="@+id/text6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:padding="7dp"
                android:text="Excercise"
                android:textSize="17dp" />

        </LinearLayout>

    </LinearLayout>

    </RelativeLayout>
</ScrollView>
